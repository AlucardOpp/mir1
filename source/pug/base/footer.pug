    ];

    var footerContactsList = {
      main: {
        title: "Контакты",
        links: [
          {
            href: "tel:+78432900683",
            text: "+7 (843) 290-06-83",
          },
          {
            href: "mailto:info@izmeril.ru",
            text: "info@izmeril.ru",
