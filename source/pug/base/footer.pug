    ]

  footer.footer(class=footerMods)
    .footer-wrapper.container.container--footer.footer-grid
      nav(aria-label="Дополнительная навигация").footer-nav
        ul.footer-nav__list
          each link in footerNavLinks
            if(link.nestedLinks)
              li.footer-nav__item
                +link(link.href, link.text)
                ul.footer-nav__nested-list
                  each linkNested in link.nestedLinks
                    li.footer-nav__nested-item
                      +link(linkNested.href, linkNested.text)
            else
              li.footer-nav__item
                +link(link.href, link.text).footer-nav__link
      .footer-contacts
        section.footer-contacts__section
          h2.footer-contacts__title=footerContactsList.main.title
          ul.footer-contacts__list
            each item in footerContactsList.main.links
              li.footer-contacts__item
                +link(item.href, item.text)
        section.footer-contacts__section
          h2.footer-contacts__title=footerContactsList.support.title
          ul.footer-contacts__list
            each item in footerContactsList.support.links
              li.footer-contacts__item
                +link(item.href, item.text)
      .footer-bottom
        .footer-bottom__links
          ul.footer-bottom__links-list
            each link in footerBottomLinks
              li.footer-bottom__links-item
                +link(link.href, link.text).footer-bottom__links-link
        a(href="#").footer-bottom__copyright-link
          +icon("icon-form-copyright", 22, 28)
          p.footer-bottom__copyright Дизайн-бюро «Форма»
